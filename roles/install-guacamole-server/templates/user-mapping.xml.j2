{% for item in CLIENTS %}
      <connection name="{{ CLIENTS[item].name }}">
         <protocol>vnc</protocol>
         <param name="hostname">{{ CLIENTS[item].hostname }}</param>
         <param name="port">{{ CLIENTS[item].port }}</param>
         <param name="password">{{ CLIENTS[item].pass }}</param>
      </connection>
{% endfor %}

